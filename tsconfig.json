{
  "compilerOptions": {
    "typeRoots": [
      "typings",
      "node_modules/@types"
    ],
    "types": ["node"],
    "module": "commonjs",
    "target": "es2019",
    "outDir": "build",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "esModuleInterop": true, 
    "preserveConstEnums": true,
    "declaration": true,
    "pretty": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "lib",
  ],  
  "exclude": [
    "node_modules/**",
    "build/**",
  ],
  "typedocOptions": {
    "name": "Leviathan Helpers",
    "entryPoints": ["lib/helpers"],
    "out": "docs",
    "excludeExternals": true,
    "excludePrivate": true,
    "excludeProtected": true,
    "categorizeByGroup": true,
    "categoryOrder": ["helper", "*"],
    "highlightTheme": "slack-ochin",
  }
}